<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dip"
>
<!--  android:layout_height="?android:attr/listPreferredItemHeight" -->
    <ImageView android:id="@+id/web_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    />
		  


    <RelativeLayout
     android:id="@+id/twoline"
     android:paddingTop="0dip" 
     android:paddingBottom="0dip" 
     android:layout_width="wrap_content" 
     android:layout_height="wrap_content" 
       android:layout_marginLeft="10dip"
	android:layout_toRightOf="@id/web_icon"
     android:minHeight="45dip" 
     >
     <!-- android:minHeight="?android:attr/listPreferredItemHeight"  -->
  <TextView 
  android:id="@+id/tv_Name" 
  android:layout_width="90dip" 
  android:layout_height="wrap_content" 
  android:layout_marginLeft="4dip" 
  android:layout_marginTop="0dip" 
  android:textAppearance="?android:attr/textAppearanceLarge" /> 

  <TextView 
  android:id="@+id/tv_phone" 
  android:layout_width="90dip" 
  android:layout_height="wrap_content" 
  android:layout_below="@id/tv_Name" 
  android:layout_alignLeft="@id/tv_Name" 
  android:textAppearance="?android:attr/textAppearanceSmall" /> 
  </RelativeLayout>
    <ImageButton
    	android:id="@+id/card_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:src="@drawable/card"
        android:background="@android:color/transparent"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/divider2"
    />
    
    <View android:id="@+id/divider2"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="0dip"
        android:layout_marginBottom="0dip"
        android:layout_marginLeft="105dip"
		android:layout_centerVertical="true"
        android:background="@drawable/divider_vertical_grey"
        android:layout_toRightOf="@id/twoline"
    />
    

</RelativeLayout>

